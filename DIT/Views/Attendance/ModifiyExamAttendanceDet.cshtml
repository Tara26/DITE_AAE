                            @Html.ValidationMessageFor(x => x.ExamDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                   





                </div>

                <div class="form-group row">
                    <!--Section1-->
                    <div class="col-lg-6 col-md-6">
                        <div class="col-md-3 offset-2">
                            <label for="txtAgencyRegnNo">Search Traninee RollNo. Dtls</label>
                        </div>
                        <div class="col-md-6">

                            @Html.TextBoxFor(model => model.Trainee_Roll_Num, new { @class = "form-control", MaxLength = "99" })
