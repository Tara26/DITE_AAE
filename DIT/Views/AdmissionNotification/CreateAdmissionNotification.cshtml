<script>
    $(document).ready(function () {
        
        let SaveNotification = document.getElementById('createNotification1');
        SaveNotification.addEventListener('click', (ev) => {
            ev.preventDefault();
            if (ValidateData() == true) {
               $('#CourseTypeErr').text('');
                $('#NotificationNumErr').text('');
                if ($('#courseType').val() == '') {
                    $('#CourseTypeErr').text('select course type');
                }
                else if ($('#notifNumber').val() == '') {
                    $('#NotificationNumErr').text('Enter the notification number');
                }
                else {
                    bootbox.confirm('Do you want to Save the notification?', (confirma) => {
                        if (confirma) {
                            return $(ev.target)[0].form.submit();
                        }
                    })
                }  
            }

        });

        $('#btnValue').click(function () {
            $("#divkarea").html("");
            var content = tinymce.get("content").getContent();
            content = content.replace("&lt;Notication Date&gt;", $('#Exam_notif_date').val());
            content = content.replace("&lt;Notication Number&gt;", $('#Exam_Notif_Number').val());
            content = content.replace("&lt;ಅಧಿಸೂಚನೆ ದಿನಾಂಕ&gt;", $('#Exam_notif_date').val());
            content = content.replace("&lt;ಅಧಿಸೂಚನೆ ಸಂ.&gt;", $('#Exam_Notif_Number').val());
            content = content.replace("&lt;Fees Date&gt;", $('#fee_pay_last_date').val());
            
            $("#divkarea").html(content);

        });

        $('#notif_date').datepicker({
            dateFormat: 'dd-mm-yy',
            minDate: 0.,
            changeMonth: true,
            changeYear: true
        });
    });

    function sample() {
        $('#my123').modal('show');
    }

    function ValidateData() {
        var returnValue = true;
