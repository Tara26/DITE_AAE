<script type="text/javascript">
    var selectedTab = '@Model.selectTab';
    if (selectedTab != null)
    {
        if (selectedTab == 0) {
            $('.nav-tabs li:eq(0) a').tab('show')
        }
        else if (selectedTab == 1) {
            $('.nav-tabs li:eq(1) a').tab('show')
        }
        else if (selectedTab == 2) {
            $('.nav-tabs li:eq(2) a').tab('show')
        }
    }

    if ('@TempData["Saved"]' != "") {
        if ('@TempData["Saved"]' == "Saved") {
            bootbox.alert("Data Saved Successfully");
            $('#courseType').val('');
            $('#notifNumber').val('');
            $('#NotifDesc').val('');
        }
        else if ('@TempData["Saved"]' == "Updated") {
            bootbox.alert("Data Updated Successfully");
        }
        else if ('@TempData["Saved"]' == "Failed") {
            bootbox.alert("Failed to Save/Update data");
        }
        else if ('@TempData["Saved"]' == "Invalid") {
            bootbox.alert("Some of the fields are invalid, please select valid data.");
        }
    }

</script>

